{{!< default}}

<div class="gh-page">
    <div class="gh-container">

        {{#tag}}
        <header class="gh-page-head gh-page-tag">
            <p>Tag:</p>
            <h1>{{name}}</h1>
            <p>{{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}</p>
            <p>
                {{#if description}}
                    {{description}}
                {{/if}}
            </p>

            {{#if feature_image}}
                <img class="gh-page-image" src="{{feature_image}}" alt="{{name}}" />
            {{/if}}

        </header>
        {{/tag}}

        <div class="gh-postfeed">
        {{#foreach posts visibility="all"}}

            {{> "card"}} {{!-- partials/card.hbs --}}

        {{/foreach}}
        </div>

    </div>
</div>
